# =============================================================================
# PROTECT PROJECT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains all credentials and configuration for the Docker containers
# Keep this file secure and never commit it to version control!

# =============================================================================
# DATABASE CONFIGURATION (MySQL)
# =============================================================================
# MySQL root user credentials
MYSQL_ROOT_PASSWORD=SuperSecureRootPass2024!

# Application database credentials
MYSQL_DATABASE=webapp_db
MYSQL_USER=webapp_user
MYSQL_PASSWORD=SecureWebAppPass2024!

# Database connection settings
DB_HOST=database
DB_NAME=webapp_db
DB_USER=webapp_user
DB_PASSWORD=SecureWebAppPass2024!
DB_PORT=3306

# =============================================================================
# WEB APPLICATION CONFIGURATION
# =============================================================================
# Flask application secret key (used for sessions, CSRF tokens, etc.)
FLASK_SECRET_KEY=SuperSecretFlaskKey2024!ChangeInProduction

# Application environment
FLASK_ENV=production
FLASK_DEBUG=false

# Web application credentials for testing
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=AdminPass2024!
DEFAULT_TEST_USERNAME=testuser
DEFAULT_TEST_PASSWORD=TestPass2024!

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Network subnets and gateways
DMZ_SUBNET=172.20.1.0/24
DMZ_GATEWAY=172.20.1.1
WEBSERVER_IP=172.20.1.10

INTERNAL_SUBNET=172.20.2.0/24
INTERNAL_GATEWAY=172.20.2.1
DATABASE_IP=172.20.2.10

OFFICE_SUBNET=172.20.3.0/24
OFFICE_GATEWAY=172.20.3.1
OFFICE_IP=172.20.3.10

# =============================================================================
# SERVICE PORTS
# =============================================================================
# External ports for services
WEBSERVER_HTTP_PORT=80
WEBSERVER_HTTPS_PORT=443
WEBSERVER_SSH_PORT=2222

DATABASE_PORT=3306
DATABASE_SSH_PORT=2223

OFFICE_RDP_PORT=3389
OFFICE_VNC_PORT=5901
OFFICE_SSH_PORT=2224

ROUTER_WEB_PORT=8080
ROUTER_SSH_PORT=2225

# =============================================================================
# SSH CONFIGURATION
# =============================================================================
# SSH keys and passwords for VM access
SSH_ROOT_PASSWORD=SecureRootSSH2024!
SSH_USER_PASSWORD=SecureUserSSH2024!

# =============================================================================
# PFSENSE ROUTER CONFIGURATION
# =============================================================================
# pfSense web interface credentials
PFSENSE_ADMIN_USER=admin
PFSENSE_ADMIN_PASSWORD=PfSenseAdmin2024!

# =============================================================================
# OFFICE ENVIRONMENT
# =============================================================================
# Office user credentials
OFFICE_USER=office
OFFICE_PASSWORD=OfficeUser2024!

# VNC password for remote desktop
VNC_PASSWORD=VNCAccess2024!

# RDP credentials
RDP_USER=office
RDP_PASSWORD=RDPAccess2024!

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# ModSecurity configuration
MODSEC_AUDIT_LOG_LEVEL=4
MODSEC_RULE_ENGINE=On

# Apache security settings
APACHE_SERVER_TOKENS=Prod
APACHE_SERVER_SIGNATURE=Off

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log levels and retention
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================
# These are only used in development/testing environments
DEV_MODE=false
ENABLE_DEBUG_LOGGING=false

# Test database (separate from production)
TEST_DB_NAME=webapp_test_db
TEST_DB_USER=test_user
TEST_DB_PASSWORD=TestDBPass2024!

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_ENCRYPTION_KEY=BackupEncryptionKey2024!

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
TZ=Europe/Amsterdam

# =============================================================================
# NOTES
# =============================================================================
# - Change all passwords before deploying to production
# - Ensure this file has proper permissions (600)
# - Never commit this file to version control
# - Consider using Docker secrets for production deployments
# - Rotate credentials regularly